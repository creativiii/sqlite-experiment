{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "imput:tailwind": {
      "cache": false,
      "inputs": ["imput-cms"]
    },
    "docs:dev": {
      "cache": true,
      "inputs": ["apps/docs"]
    },
    "test:dev": {
      "cache": false,
      "inputs": ["apps/cms"]
    },
    "docs": {
      "dependsOn": ["imput:tailwind:watch", "docs:dev"]
    },
    "test": {
      "dependsOn": ["imput:tailwind:watch", "test:dev"]
    },
    "docs:build": {
      "cache": false
    },
    "imput:release": {},
    "imput:build": {},
    "imput:test": {
      "cache": false,
      "inputs": ["imput-cms"]
    }
  }
}
